<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.passershowe.blogdemo.thread.MainActivity">

    <Button
        android:id="@+id/error_down_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/error_down_image"/>

    <Button
        android:id="@+id/down_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_image"
        android:layout_below="@+id/error_down_image_btn"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/async_down_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/async_down_image"
        android:layout_below="@+id/down_image_btn"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/show_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/image"
        android:layout_below="@+id/async_down_image_btn"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
